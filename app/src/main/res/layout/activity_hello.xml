<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.hello.HelloActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat datang di Devcode!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:contentDescription="devcode-title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan klik tombol di bawah ini untuk melihat hasil akhir dari perubahan yang kamu lakukan."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:contentDescription="devcode-title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/router_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_bg"
        android:text="Lihat hasil"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"
        android:contentDescription="router-button"
        android:textColor="@color/white"
        android:paddingHorizontal="16dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/teal_200"/>
</LinearLayout>